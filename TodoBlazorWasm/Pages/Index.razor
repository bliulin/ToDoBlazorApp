@page "/"

<PageTitle>My TODOs</PageTitle>

<h1>Hello, person! These are the stuff you have on your list</h1>

Good luck in making them come true!

<table class="table">       
    <thead>
            <tr>
                <th>Title</th>
                <th>Is it done?</th>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Items)
            {
            <tr>
                <td>@item.Title</td>
                <td>
                    @item.IsDone
                </td>
                <td>
                    <a href="@($"todo/{item.Id.ToString()}")" class="btn btn-primary table-btn">
                        <i class="fas fa-edit"></i>
                    </a>   
                    <a href="#" class="btn btn-danger table-btn">
                        <i class="fas fa-trash"></i>
                    </a>  
                </td>

            </tr>
            }
        </tbody>
    </table>
